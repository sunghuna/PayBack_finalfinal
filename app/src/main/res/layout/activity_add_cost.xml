<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffbb00"
        android:paddingBottom="8dp"
        android:paddingTop="3dp">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffbb00"
            android:text="←"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거래추가"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:text="금액을 입력하세요."
            android:textSize="20sp" />

        <EditText
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:editable="false"
            android:ems="10"
            android:text="0"
            android:focusable="false"
            android:gravity="right"/>

        <ImageButton
            android:id="@+id/n1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/n1" />

        <ImageButton
            android:id="@+id/n2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/n1"
            android:layout_toEndOf="@+id/n1"
            android:layout_toRightOf="@+id/n1"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/n2" />

        <ImageButton
            android:id="@+id/n3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/n2"
            android:layout_toEndOf="@+id/n2"
            android:layout_toRightOf="@+id/n2"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/n3" />

        <ImageButton
            android:id="@+id/n4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/n1"
            android:layout_below="@+id/n1"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/n4" />

        <ImageButton
            android:id="@+id/n5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/n2"
            android:layout_below="@+id/n2"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/n5" />

        <ImageButton
            android:id="@+id/n6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/n3"
            android:layout_below="@+id/n3"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/n6" />


        <ImageButton
            android:id="@+id/n7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/n4"
            android:layout_below="@+id/n4"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/n7" />

        <ImageButton
            android:id="@+id/n8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/n5"
            android:layout_below="@+id/n5"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/n8" />

        <ImageButton
            android:id="@+id/n9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/n6"
            android:layout_below="@+id/n6"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/n9" />


        <ImageButton
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/n0"
            android:layout_alignLeft="@+id/n7"
            android:layout_below="@+id/n7"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/x" />

        <ImageButton
            android:id="@+id/n0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/n8"
            android:layout_below="@+id/n8"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/n0" />

        <ImageButton
            android:id="@+id/won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/n0"
            android:layout_alignLeft="@+id/n9"
            android:layout_below="@+id/n9"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/won" />
    </RelativeLayout>
</LinearLayout>